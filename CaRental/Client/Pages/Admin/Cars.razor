@page "/admin/cars"
@inject ICarService CarService
@inject NavigationManager NavigationManager
@attribute [Authorize(Roles = "Admin")]

<h3>Cars</h3>

@if (CarService.AdminCars == null)
{
    <span>Loading Cars...</span>
}
else
{
    <button class="btn btn-primary float-end" @onclick="CreateCar">
        <i class="oi oi-plus"></i> Add new car
    </button>
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Car</th>
                <th>Variant</th>
                <th>Price</th>
                <th>Visible</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <Virtualize Items="CarService.AdminCars" Context="car">
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(car.Image))
                        {
                            <img src="@car.Image" />
                        }
                        else if(car.FileImages.Count >0)
                        {
                            <img src="@car.FileImages[0].Data" />
                        }
                    </td>
                    <td>@car.Brand</td>
                    <td>
                        @foreach (var variant in car.Variants)
                        {
                            <span>@variant.Edition.Name</span>
                            
                            <br/>
                        }
                    </td>
                    <td>
                        @foreach (var variant in car.Variants)
                        {
                            <span>@variant.Price</span>
                            
                            <br/>
                        }
                    </td>
                    <td>@(car.Visible ? "✔️" : "")</td>
                    <td>
                        <button class="btn btn-primary" @onclick="(() => EditCar(car.Id))">
                            <i class="oi oi-pencil"></i>
                        </button>
                    </td>
                </tr>
                
            </Virtualize>
        </tbody>
    </table>
}

@code {
    protected override async Task OnInitializedAsync()
    {
        await CarService.GetAdminCars();
    }

    void EditCar(int carId)
    {
        NavigationManager.NavigateTo($"admin/car/{carId}");
    }

    void CreateCar()
    {
        NavigationManager.NavigateTo("admin/car");
    }
}
